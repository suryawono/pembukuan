
<%= form_for @transaction, :html => {:class => "form-horizontal"} do |f| %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h6 class="panel-title"><i class="icon-bubble4"></i>Tambah Jenis Kategori</h6>
    </div>

    <div class="panel-body">
      <div class="form-group">
        <%= f.label "Ketegori", :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.grouped_collection_select(:category_id,@category_types,:categories,:name,:id,:name, :class => "form-control") %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label "Sumber Dana", :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.collection_select(:funding_source_id, FundingSource.all, :id, :name, :class => "form-control", :include_blank => true) %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label "Tanggal", :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.date_field :tanggal, :value => Time.now.strftime('%Y-%m-%d'), :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label "Nominal", :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :nominal, :class => "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label "Keterangan", :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_area :keterangan,cols: 30,rows: 10, :class => "form-control" %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-actions text-right">
    <%= f.submit :submit, :class => 'btn btn-primary', :id => 'formButton' %>
  </div>
<% end %>