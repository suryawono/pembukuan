<%= form_for @category do |f| %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h6 class="panel-title"><i class="icon-bubble4"></i>Tambah Kategori</h6>
  </div>

  <div class="panel-body">
    <div class="form-group">
      <%= f.label "Jenis Kategori", :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
      <%= f.collection_select(:category_type_id, CategoryType.all, :id, :name, {:include_blank => false}, :class => 'select2-drop') %>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <div class="form-group">
      <%= f.label "Nama", :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
    </div>
  </div>
</div>

  <div class="form-actions text-right">
  		<%= f.submit :submit, :class => 'btn btn-primary', :id => 'formButton' %>
  </div>

<% end %>
