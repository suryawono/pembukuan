<form action="#" role="form" class="form-horizontal panel-filter">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h6 class="panel-title">&nbsp;</h6>
      <a href="<%= new_category_path %>" class="pull-right btn btn-xs btn-default"><i class="icon-plus-circle2"></i>Tambah</a>
    </div>
  </div>
</form>
<div class="panel panel-default">
  <div class="panel-heading">
    <h6 class="panel-title"><%= @title %><i class="icon-table"></i></h6>
  </div>
  <div class="datatable-pagination">
    <table class="table">
      <thead>
        <tr>
          <th>
            No.
          </th>
          <th>
            Nama
          </th>
          <th>
            Jenis
          </th>
          <th>
            Aksi
          </th>
        </tr>
      </thead>
      <tbody>
        <% @i=1 %>
        <% @categories.each do |c| %>
          <tr>
            <td>
              <%= @i %>
            </td>
            <td>
              <%= c.name %>
            </td>
            <td>
              <%= c.category_type.name %>
            </td>
            <td>
              <%= button_to "Hapus", category_path(c), :method => :delete, :data => {confirm: "Yakin menghapus??"}, :class => 'btn btn-danger' %>
            </td>
          </tr>
          <% @i+=1 %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
